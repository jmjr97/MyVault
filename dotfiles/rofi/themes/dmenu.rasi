* {
    background-color:      #282c34;
    text-color:           #abb2bf;
    font:            "Hack Nerd Font Mono 12";
}
window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    4px;
	margin: 29px 0px 0px 0px;
	border: 2px 0px 2px 0px;
	border-color: #363740; 
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    children:   [ prompt, textbox-prompt-colon, entry, listview ];
}
prompt {
	text-color: #abb2bf;	
}
textbox-prompt-colon {
	str: ": ";
	expand: false;
}
entry {
    expand:     false;
    width:      10em;
}
listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}
element {
    padding: 0px 2px;
}
element selected {
    background-color: #61afef;
    text-color: #282c34;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
