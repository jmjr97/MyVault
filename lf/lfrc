# Basic Settings
set preview true
set hidden true
set ignorecase true

export EDITOR="nvim"

cmd open $set -f; rifle -p 0 "$fx"

# Custom Functions
cmd mkdir ${{
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
    read ans
    touch $ans
}}

cmd fzf_jump ${{
    res="$(find . | fzf --reverse --header='Jump to location')"
    if [ -n "$res" ]; then
        if [ -d "$res" ]; then
            cmd="cd"
        else
            cmd="select"
        fi
        res="$(printf '%s' "$res" | sed 's/\\/\\\\/g;s/"/\\"/g')"
        lf -remote "send $id $cmd \"$res\""
    fi
}}

# Remove Default Bindings
map m
map o
map n
map "'"
map '"'
map d
map i

# Keybindings
map <enter> open
map md mkdir
map mf mkfile
map f $vi $(fzf -d)
map DD delete
map d cut
map <c-f> :fzf_jump

map o $view "$f"
